<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.umbrella.android">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android">

        <activity
            android:name=".activities.NetworkActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".data.db.DeleteNetworkActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.UploadActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.ListImagesActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".activities.UploadNetworkActivity"
            android:theme="@style/Theme.AppCompat"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>